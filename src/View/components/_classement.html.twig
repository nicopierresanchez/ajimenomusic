{% for i in 3..29 %}
    <a href="{{ videos[i].url }}" class="classement">
        <div class="place">Rang #{{ i+1 }}</div>
        <div class="music-name-classement">{{ videos[i].name }}</div>
        <p class="music-points">Points: {{ videos[i].points }}</p>
    </a>
{% endfor %}

{% if validate is not null %}
    <div class="validate-title">Tes votes</div>
    <div class="valid-music">
        {% for valid in validate %}
            <a href="{{ valid['url'] }}" class="valid-music-item">{{ valid['title'] }}</a>
        {% endfor %}
